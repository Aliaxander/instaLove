<div class="site-index">
    <form method="post">
        <div class="container">
            {% for setting in settings %}
                <div class="row">
                    <div class="col-md-3">{{ setting.name }}</div>
                    <div class="col-md-6"><input class="form-control"
                                                 name="{{ setting.id }}" type="text"
                                                 value="{{ setting.value }}"></div>
                </div>
            {% endfor %}
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6"><input type="submit" class="btn btn-success" value="save"></div>
            </div>
        </div>
    </form>
</div>